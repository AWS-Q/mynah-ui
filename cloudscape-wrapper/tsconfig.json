{
    "compilerOptions": {
        "sourceMap": true,
        "allowJs": false,
        "esModuleInterop": true,
        "lib": [
            "ES2015",
            "dom"
        ],
        "declaration": true,
        "allowSyntheticDefaultImports": false,
        "moduleResolution": "node",
        "noEmit": true,
        "resolveJsonModule": true,
        "strict": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/typings"
        ],
        "skipLibCheck": true,
        "noImplicitAny": true,
        "module": "ES2015",
        "target": "ES6",
        "jsx": "react-jsx",
    },
    "exclude": [
        "build",
        "dist",
        "node_modules"
    ]
}